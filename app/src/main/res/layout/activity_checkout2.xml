<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homebackground"
    tools:context=".Checkout2">

    <!-- Horizontal Progress Bar -->
    <LinearLayout
        android:id="@+id/progress_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Shipping Step -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Checked Circle -->
            <ImageView
                android:id="@+id/circle_shipping"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_circle_checked" />

            <!-- Shipping Label -->
            <TextView
                android:id="@+id/tv_shipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Shipping"
                android:textSize="16sp"
                android:textColor="@color/grey" />
        </LinearLayout>

        <!-- Line between circles -->
        <View
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:background="@color/grey" />

        <!-- Payment Step -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Full Circle -->
            <ImageView
                android:id="@+id/circle_payment"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_circle_checked" />

            <!-- Payment Label -->
            <TextView
                android:id="@+id/tv_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Payment"
                android:textSize="14sp"
                android:textColor="@color/grey" />
        </LinearLayout>

        <!-- Line between circles -->
        <View
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:background="@color/grey" />

        <!-- Submit Step -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Empty Circle -->
            <ImageView
                android:id="@+id/circle_submit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_circle_unchecked" />

            <!-- Submit Label -->
            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Submit"
                android:textSize="14sp"
                android:textColor="@color/grey" />
        </LinearLayout>
    </LinearLayout>

    <!-- Checkout Title -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHECKOUT"
        android:textColor="@color/grey"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <!-- Shipping Method CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_shipping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Shipping Method Title -->
            <TextView
                android:id="@+id/tv_payment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Payment Method"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/grey"
                android:paddingBottom="12dp"/>

            <!-- Shipping Options Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Pickup Option -->
                <LinearLayout
                    android:id="@+id/card_option"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_creditcard" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Credit Card"
                        android:textColor="@color/grey"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Courier Option -->
                <LinearLayout
                    android:id="@+id/cash_option"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_mony" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cash"
                        android:textColor="@color/grey"
                        android:textSize="16sp"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@+id/cardView_shipping"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardElevation="4dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!-- Payment Method Title -->
            <TextView
                android:id="@+id/card_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Method"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/grey"
                android:paddingBottom="12dp"/>

            <!-- Cardholder Name -->
            <EditText
                android:id="@+id/et_cardholder_name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Cardholder Name"
                android:inputType="textPersonName"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <!-- Card Number -->
            <EditText
                android:id="@+id/et_card_number"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Card Number"
                android:inputType="number"
                android:maxLength="16"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="12dp"/>

            <!-- Expiry Date and CVV -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <!-- Expiry Date -->
                <EditText
                    android:id="@+id/et_expiry_date"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:hint="MM/YY"
                    android:inputType="date"
                    android:maxLength="5"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <!-- CVV -->
                <EditText
                    android:id="@+id/et_cvv"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:hint="CVV"
                    android:inputType="numberPassword"
                    android:maxLength="3"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>
            <!-- Save Credit Card Option -->
            <CheckBox
                android:id="@+id/save_card_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save this card"
                android:textColor="@color/grey"
                android:textSize="16sp"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="411dp"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    android:layout_marginBottom="0dp">

    <!-- Additional TextView -->
        <TextView
            android:id="@+id/tv_additional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Total Price:  ILS"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <!-- Next Button -->
        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/grey"
            android:elevation="4dp"
            android:text="Next"
            android:textColor="@android:color/white" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
