<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/homebackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Checkout3">

    <!-- Horizontal Progress Bar -->
    <LinearLayout
        android:id="@+id/progress_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Shipping Step -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Checked Circle -->
            <ImageView
                android:id="@+id/circle_shipping"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_circle_checked" />

            <!-- Shipping Label -->
            <TextView
                android:id="@+id/tv_shipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Shipping"
                android:textSize="16sp"
                android:textColor="@color/grey" />
        </LinearLayout>

        <!-- Line between circles -->
        <View
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:background="@color/grey" />

        <!-- Payment Step -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Full Circle -->
            <ImageView
                android:id="@+id/circle_payment"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_circle_checked" />

            <!-- Payment Label -->
            <TextView
                android:id="@+id/tv_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Payment"
                android:textSize="14sp"
                android:textColor="@color/grey" />
        </LinearLayout>

        <!-- Line between circles -->
        <View
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:background="@color/grey" />

        <!-- Submit Step -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Full Circle -->
            <ImageView
                android:id="@+id/circle_submit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_circle_checked" />

            <!-- Submit Label -->
            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Submit"
                android:textSize="14sp"
                android:textColor="@color/grey" />
        </LinearLayout>

    </LinearLayout>

    <!-- Layout for Button and Lottie Animation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/progress_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Submit Order Button -->
        <Button
            android:id="@+id/orderButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Order"
            android:backgroundTint="@color/grey"/>

        <!-- Lottie Animation -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimationView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:visibility="gone"
            app:lottie_rawRes="@raw/successanimation"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
